{
  "dependencies": {
    "@d8x/perpetuals-sdk": "^0.8.36",
    "dotenv": "^16.0.3",
    "ethers": "^5.7.2",
    "ioredis": "^5.3.2",
    "pm2": "^5.2.2",
    "sturdy-websocket": "^0.2.1",
    "typescript": "^5.0.4",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/node": "^18.11.9",
    "@types/ws": "^8.5.5"
  },
  "scripts": {
    "build": "npx tsc",
    "postinstall": "$(yarn bin)/pm2 install typescript",
    "start-streamer": "node dist/src/listener/start.js",
